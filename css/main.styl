@import 'yeticss'

$gray = #f2f4f6
$shadow = 0 2px 2px 0 rgba(0,0,0,.14),0 3px 1px -2px rgba(0,0,0,.2),0 1px 5px 0 rgba(0,0,0,.12)
$highlightBlue = #008dba

body
  background-color: $gray
  font-family: 'Roboto', sans-serif

h1,h2,h3,h4,h5,h6
  font-family: 'Roboto', sans-serif

a
  color: darken($gray, 40)

i.highlight
  color: $highlightBlue

#app
  max-width: 700px
  margin: 0px auto
  background-color: white
  min-height: 600px
  border: 1px solid darken($gray, 10%)

div.review-card
  border: 1px solid darken($gray, 10%)
  margin-bottom: 20px
  div.review, div.workload, div.grid-flex-cell
    padding: 0 35px
    margin: 20px 0
  div.review, div.workload
    margin-top: 0
  h2
    font-weight: 200
    text-transform: uppercase
    font-size: 10px
    letter-spacing: 5px
    color: darken($gray, 60%)
    margin: 0
  p
    margin: 0
    font-size: 12px
    line-height: 18px
    a
      font-weight: 600
      font-size: 13px
  p.date
    font-style: italic
    font-size: 13px
    margin-top: 8px
  div.review
    a
      font-size: 12px
      text-decoration: underline
  div.review-actions
    border-top: 1px solid darken($gray, 10%)
    div.grid-flex-cell
      margin: 10px 0
    ul
      margin: 0
      padding: 0
      float: right
    ul li
      list-style-type: none
      display: inline-block
      margin: 0 10px
      font-size: 14px
      -webkit-user-select: none
      -moz-user-select: none
      -khtml-user-select: none
      -o-user-select: none
      user-select: none
      cursor: pointer
      i
        font-size: 20px
    button
      font-size: 10px
      font-weight: bold
      display: inline-block
      text-transform: uppercase
      padding: 6px 8px

h2.deptCard 
  border: 1px solid $gray
  display: inline-block
  font-size: 20px
  padding: 20px
  min-width: 120px
  margin-right: 20px
  a 
    color: black

header#banner
  text-align: center
  padding-top: 30px
  border-bottom: 1px solid $gray
  margin-bottom: 30px

div.search-results
  margin-bottom: 50px

section.results h6
  border: 1px solid $gray
  background-color: $gray
  padding: 10px
  margin-bottom: 0
  font-size: 11px

section.results ul
  margin: 0
  padding: 0

section.results ul li
  list-style-type: none
  margin: 0
  border: 1px solid $gray
  border-top: 0
  font-size: 12px
  padding: 10px
  a
    color: $highlightBlue

div.search-page input
  font-size: 13px;

div.search-results
  p
    font-size: 13px
    font-style: italic
    color: $highlightBlue
